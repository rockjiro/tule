<div class="head-area">
	<h1>Tule</h1>
	<p class="sub-title"> ～information shared～ </p>
</div>

<div id="memo-list">
<% @posts.each do |post| %>
	<div class="memo" id="memo<%= post.id %>" style="-webkit-transform:rotate(<%= Random.rand(-5 .. 5) %>deg);">
		<span class='tape'></span>
		<p><%= simple_format(post.contents) %></p>
	</div>
<% end %>
</div>

<!--<div id="input-area">-->
